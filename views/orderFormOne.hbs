            <select class="form-select" aria-label="Default select example" id="model" name="model">
              {{#each bagModels}}
              <option value="{{name}}">{{name}}</option>
              {{/each}}
            </select>
          </div>

          <div class="mb-3">
            <label for="disabledSelect" class="form-label">Размер</label>
            <select class="form-select" aria-label="Default select example" id="size" name="bagSize">
              {{#each sizes}}
              <option value="{{sizeName}}">{{sizeName}}</option>
            {{/each}}
            </select>
            <div><label id="height" for="disabledSelect" class="form-label">height:{{height}}</label></div>
              <div><label id="width" for="disabledSelect" class="form-label">width:{{width}}</label></div>
              <div><label id="depth" for="disabledSelect" class="form-label">depth:{{depth}}</label></div>
              <div><label id="handleSize" for="disabledSelect" class="form-label">length of handles:{{handleSize}}</label></div>
          </div>
          <div class="mb-3">
            <label for="disabledSelect" class="form-label">Выбор материал</label>
            <select class="form-select" aria-label="Default select example" id="material" name="material">
              {{#each materials}}
                <option value="{{name}}">{{name}}</option>
              {{/each}}
            </select> <br>
            <div>
              <img src="img/materials.jpg" width="550">
            </div>
          </div>
          <div class="mb-3">
            <label for="Select" class="form-label">Цвет</label>
            <select class="form-select" aria-label="select example" id="bagColor" name="bagColor">
              {{#each colors}}
                <option value="{{name}}">{{name}}</option>
              {{/each}}
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Тираж</label>
            <input type="text" class="form-control" aria-label="select example" id="limit" name="limit" placeholder="от 500 шт" required>
          </div>
          <div >
            <div>
            <label for="Select" class="form-label" id="priceDiv"> будет DIV стоимости </label>
            </div>
